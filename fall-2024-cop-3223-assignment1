#include <stdio.h>
#include <math.h>
#include <stdlib.h>
#define PI 3.14159



double calculateDistance(){
    
    int x1, y1, x2, y2;
    
    scanf("%d", &x1);
    scanf("%d", &y1);
    scanf("%d", &x2);
    scanf("%d", &y2);
    
    double distance = (y2 - y1)/(x2 - x1);
    
    printf("\nPoint #1 entered: x1 = %d; y1 = %d\n", x1, y1);
    printf("Point #1 entered: x2 = %d; y2 = %d\n", x2, y2);
    printf("The distance between the two points is %.2f\n", distance);

    return distance;
}


double calculatePerimeter(){
    
    double distance = calculateDistance();
    
    double perimeter = (2 * PI * (distance / 2));
    
    printf("The perimeter of the city encompassed by your request is %.2f\n", perimeter);
    
    int difficulty = 1;
    
    return difficulty;
    
}

double calculateArea(){
    
    double distance = calculateDistance();
    
    double area = (PI * pow((distance / 2), 2));
    
    printf("The area of the city encompassed by your request is %.2f\n", area);
    
    int difficulty = 1;
    
    return difficulty;
    
}

double calculateWidth(){
    
    int x1, y1, x2, y2;
    
    scanf("%d", &x1);
    scanf("%d", &y1);
    scanf("%d", &x2);
    scanf("%d", &y2);
    
    double width = x2 - x1;
    
    printf("The width of the city encompassed by your request is %.2f\n", fabs(width));
    
    int difficulty = 1;
    
    return difficulty;
    
}


double calculateHeight(){
    
    int x1, y1, x2, y2;
    
    scanf("%d", &x1);
    scanf("%d", &y1);
    scanf("%d", &x2);
    scanf("%d", &y2);
    
    double height = y2 - y1;
    
    printf("The height of the city encompassed by your request is %.2f\n", fabs(height));
    
    int difficulty = 1;
    
    return difficulty;
    
}


int main(int argc, char **argv){
   
    calculateDistance () ;
    calculatePerimeter () ;
    calculateArea () ;
    calculateWidth () ;
    calculateHeight () ;
    return 0;

    
}